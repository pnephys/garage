{% extends 'base.html.twig' %}

{% block title %}Annonce : {{ ad.modele }}{% endblock %}

{% block body %}
<div class="annonce-title" style="background-image: url({{ad.CoverImage}}); min-height: 300px;">
   
</div>
<div>
<div class="container">

    <div class="row">
  <div class="col-sm-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Marque de la voiture : {{ad.marque}}</h5>
            <h5 class="card-title">Modèle de la voiture : {{ad.modele}} </h5>
            <h5 class="card-title">Kilomètre de la voiture : {{ ad.km }} Km</h5>
            <h5 class="card-title">Prix catalogue : {{ ad.price }} €</h5>
            <h5 class="card-title">Nombre de propriétaire : {{ ad.NbProprio }}</h5>
            <h5 class="card-title">Cylindrée : {{ ad.cylindre}}</h5>
            <h5 class="card-title">Puissance : {{ ad.puissance }}</h5>
            <h5 class="card-title">Type de carburant : {{ ad.carburant }}</h5>
            <h5 class="card-title">Année de mise en circulation : {{ ad.Pcirculation }}</h5>
            <h5 class="card-title">Transmission : {{ ad.transmission }}</h5>
            <h5 class="card-title">Description : {{ ad.description }}</h5>
        </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Les options de la voiture : {{ ad.options | raw | nl2br }}</h5>
        </div>
    </div>
  </div>
</div>
</div>

 

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 mb-3 ">
           
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for image in ad.images %}
                        <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>    
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for image in ad.images %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img src="{{ image.url }}" class="d-block w-100" alt="image de {{ ad.modele }}">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ ad.modele }}</h5>
                                <p>{{ image.caption }}</p>
                            </div>
                        </div>
                    {% endfor %}

                  
                  
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

    
    </div>
</div>
{% endblock %}
