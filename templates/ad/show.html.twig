{% extends 'base.html.twig' %}

{% block title %}Annonce : {{ ad.modele }}{% endblock %}

{% block body %}
<div class="annonce-title" style="background-image: url({{ad.CoverImage}}); min-height: 300px;">
   
</div>
<div>
 <div class="container">
       <h1> Marque de la voiture : {{ad.marque}}</h1>
       <p> Modèle de la voiture : {{ad.modele}}</p>
       <p> Kilomètre de la voiture : {{ ad.km }} Km</p>
       <p> Prix catalogue : {{ ad.price }} €</p>
       <p> Nombre de propriétaire : {{ ad.NbProprio }}</p>
       <p> Cylindrée : {{ ad.cylindre}}</p>
       <p> Puissance : {{ ad.puissance }}</p>
       <p> Type de carburant : {{ ad.carburant }}</p>
       <p> Année de mise en circulation : {{ ad.Pcirculation }}</p>
       <p> Transmission : {{ ad.transmission }}</p>
       <p> Description : {{ ad.description }}</p>
       <p> Les options de la voiture : {{ ad.options | raw | nl2br }}</p>
       <a href="#" class="btn btn-primary">Réserver </a>
       <button type="button" class="btn btn-info">Acheter</button>
    </div>

</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 mb-3 ">
           
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for image in ad.images %}
                        <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>    
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for image in ad.images %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img src="{{ image.url }}" class="d-block w-100" alt="image de {{ ad.modele }}">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ ad.modele }}</h5>
                                <p>{{ image.caption }}</p>
                            </div>
                        </div>
                    {% endfor %}

                  
                  
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

    
    </div>
</div>
{% endblock %}
